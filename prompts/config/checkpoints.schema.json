{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://haleon.local/prompts/config/checkpoints.schema.json",
  "title": "Codex Checkpoint",
  "description": "Structure emitted by the /save command for work-in-progress checkpoints.",
  "type": "object",
  "required": [
    "id",
    "status",
    "created_at",
    "session_status",
    "git",
    "files_changed",
    "tests",
    "tasks",
    "notes",
    "created_by"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^\\d{8}-\\d{6}$",
      "description": "Sortable checkpoint identifier in yyyymmdd-hhmmss form."
    },
    "status": {
      "type": "string",
      "description": "High-level checkpoint state such as closed/open."
    },
    "created_at": {
      "type": "string",
      "description": "ISO-8601 timestamp for when the checkpoint was issued."
    },
    "session_status": {
      "type": "string",
      "description": "Session state when the checkpoint was captured."
    },
    "git": {
      "type": "object",
      "required": [
        "branch",
        "head",
        "dirty"
      ],
      "additionalProperties": false,
      "properties": {
        "branch": {
          "type": "string"
        },
        "head": {
          "type": "string"
        },
        "dirty": {
          "type": "boolean"
        },
        "diffstat": {
          "type": "string"
        }
      }
    },
    "files_changed": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tests": {
      "type": "object",
      "required": [
        "ran",
        "summary"
      ],
      "additionalProperties": false,
      "properties": {
        "ran": {
          "type": "boolean"
        },
        "summary": {
          "type": "string"
        },
        "details": {
          "type": "string"
        },
        "recommended": {
          "type": "string"
        }
      }
    },
    "tasks": {
      "type": "object",
      "required": [
        "in_progress",
        "completed"
      ],
      "additionalProperties": false,
      "properties": {
        "in_progress": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "completed": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "notes": {
      "type": "string"
    },
    "created_by": {
      "type": "string"
    },
    "alerts": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "blockers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "issue"
        ],
        "additionalProperties": false,
        "properties": {
          "issue": {
            "type": "string"
          },
          "impact": {
            "type": "string"
          },
          "solutions": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
